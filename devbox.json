{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.13.6/.schema/devbox.schema.json",
  "packages": [
    "terraform-docs@latest",
    "terraform@latest",
    "kubectl@latest",
    "chart-testing@latest",
    "age@latest",
    "sops@latest",
    "curl@latest",
    "pre-commit@latest",
    "tflint@latest",
    "trivy@latest",
    "checkov@latest",
    "kubernetes-helm@latest",
    "actionlint@latest",
    "typos@latest",
    "codespell@latest",
  ],
  "env": {
    "SOPS_AGE_KEY_FILE": "$DEVBOX_PROJECT_ROOT/age_key.txt",
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null",
      "pre-commit install",
      "./bin/generate_secret.sh",
      "cd terraform && terraform init -upgrade",
    ],
    "scripts": {
      "install": [
        "sudo ls > /dev/null",
        "cd $DEVBOX_PROJECT_ROOT/terraform && terraform apply",
        "cd $DEVBOX_PROJECT_ROOT/terraform && curl `terraform output --raw eip_public_dns`/config",
      ],
      "output": [
        "terraform output eip_public_dns",
      ],
      "role": [
        "terraform output assume_eks_admins_role",
      ],
    },
  },
}
